# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# 모든 파일에 적용
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 들여쓰기 설정
indent_style = space
indent_size = 2

# JavaScript/TypeScript/React Native
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON 파일들
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown (문서)
[*.md]
trim_trailing_whitespace = false

# XML (Android 관련)
[*.xml]
indent_size = 2

# Gradle (Android 빌드)
[*.gradle]
indent_size = 2

# Properties 파일
[*.properties]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Git 관련
[.gitignore]
indent_size = 2
